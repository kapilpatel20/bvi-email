{% block title %}Edit Email Template{% endblock title %}
{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <h1>Edit Email Template</h1>
            <ol class="breadcrumb">
                <li><a href="{{ path('bvi_email_list') }}">Back to List</a></li>
                <li class="active">Edit Email Template</li>
            </ol>
        </section>
        <section class="content">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <!-- Default box -->
                    <div class="box box-primary">
                        <form action="{{ path('bvi_email_edit', {'id' : app.request.get('id')})}}" method="POST" id="emailForm" role="form" novalidate>
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-xs-12 col-md-9 no-padding-left">
                                        <div class="form-group col-md-6">
                                            <label for="email_template_subject">Subject <span class="required">*</span></label>
                                            {{ form_widget(form.subject, { 'attr': { 'placeholder': 'Please enter subject', 'class': 'form-control'}}) }}
                                            <span class="text-danger">{% if form_errors(form.subject) %}{{ form_errors(form.subject) }}{% endif %}</span>
                                        </div>
                                        
                                        <div class="form-group col-md-6">
                                            <label for="email_template_content">Content <span class="required">*</span></label>
                                            {{ form_widget(form.content, { 'attr': { 'placeholder': 'Please enter content', 'class': 'form-control'}}) }}
                                            <span class="text-danger">{% if form_errors(form.content) %}{{ form_errors(form.content) }}{% endif %}</span>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="email_template_status">Status <span class="required">*</span></label>
                                            {{ form_widget(form.status, { 'attr': {'class': 'form-control'}}) }}
                                            <span class="text-danger">{% if form_errors(form.status) %}{{ form_errors(form.status) }}{% endif %}</span>
                                        </div>
                                     {{ form_rest(form) }}
                                    </div>
                                </div>
                            </div>
                            <div class="box-footer">	
                                <div class="pull-right hidden-xs">
                                     <div class="formnotes">* denotes required field</div>
                                </div><br/>
                                <input type="submit" value="Update" class="btn btn-primary">  
                                <a onClick="location.href = '{{ path('bvi_email_list') }}'" class="btn btn-default"> Cancel </a>
                            </div> 
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock body %}